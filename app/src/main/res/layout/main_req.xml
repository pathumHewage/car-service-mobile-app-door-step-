<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:paddingBottom="10dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"



    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_design"

        android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="139dp"

            android:layout_height="116dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginStart="124dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/dr"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nametextf"
            android:text="Request Name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_below="@+id/img1"
            android:gravity="left"

            android:layout_marginLeft="5dp"

            />


        <TextView
            android:id="@+id/nametext"

            android:layout_below="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="Request Name"
            android:textColor="#000"
            android:textSize="25sp"

            android:textStyle="bold"

            />




        <TextView
            android:id="@+id/phoneNotextf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext"

            android:text="Phone No"
            android:textColor="#000"
            android:gravity="left"

            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />



        <TextView
            android:id="@+id/phoneNotext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext"

            android:text="Phone No"
            android:textColor="#000"
            android:gravity="right"

            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/locationtextf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNotext"
            android:layout_marginLeft="5dp"
            android:text="Location"
            android:textColor="#000"
            android:gravity="left"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/locationtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNotext"
            android:text="Location"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:gravity="right"


            android:textSize="25sp"
            android:textStyle="bold" />







        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brandtextf"
            android:text="Brand"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"

            android:layout_below="@+id/locationtext"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/brandtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationtext"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="Brand"

            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold"

            />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vModeltextf"
            android:text="Vehicle Model"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"

            android:layout_below="@+id/brandtext"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vModeltext"
            android:text="Vehicle Model"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:layout_below="@+id/brandtext"
            android:layout_marginLeft="10dp"/>





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vMaketextf"
            android:text="Vehicle Make"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"

            android:layout_below="@+id/vModeltext"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vMaketext"
            android:text="Vehicle Make"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:layout_below="@+id/vModeltext"
            android:layout_marginLeft="10dp"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fuelTypetextf"
            android:text="Fuel Type"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"

            android:layout_below="@+id/vMaketext"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fuelTypetext"
            android:text="Fuel Type"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:layout_below="@+id/vMaketext"
            android:layout_marginLeft="10dp"/>





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/datetextf"
            android:text="Request Date"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"

            android:layout_below="@+id/fuelTypetext"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/datetext"
            android:text="Request Date"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:layout_below="@+id/fuelTypetext"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"

            />








        <LinearLayout

            android:layout_below="@id/datetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#FFFFFFFF"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:background="@color/purple_500"
                android:id="@+id/btnEdit"
                />

            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="#FFFFFFFF"
                android:textAllCaps="false"
                android:layout_marginLeft="1dp"
                android:background="@color/purple_500"
                android:id="@+id/btnDelete"/>



        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>